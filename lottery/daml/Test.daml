daml 1.2
module Test where

import DA.Date
import DA.Time
import Lottery
import Iou

data Fixture = Fixture with
  o : Party
  a : Party
  b : Party
  c : Party
  iouIdA : ContractId Iou
  iouIdB : ContractId Iou
  iouIdC : ContractId Iou
  playId : ContractId Draw

setupFixture : Decimal -> Decimal -> Decimal -> Scenario Fixture
setupFixture amountA amountB amountC =
  do
    i <- getParty "Issuer"
    o <- getParty "Organizer"
    a <- getParty "PlayerA"
    b <- getParty "PlayerB"
    c <- getParty "PlayerC"
    iouIdA <- submit i do create Iou with issuer = i; owner = a; amount = amountA; currency = "USD"
    iouIdB <- submit i do create Iou with issuer = i; owner = b; amount = amountB; currency = "USD"
    iouIdC <- submit i do create Iou with issuer = i; owner = c; amount = amountC; currency = "USD"
    playId <- submit o do
      create Draw with
        organizer = o
        name = "MyLottery"
        description = "A test draw"
        players = []
        cashPrize = 0.0
        deadline = time (date 1970 Jan 2) 0 0 0
        ticketPrice = 3.50
    inviteId <- submit o do exercise playId Invite with player = a
    playId <- submit a do exercise inviteId Accept
    inviteId <- submit o do exercise playId Invite with player = b
    playId <- submit b do exercise inviteId Accept
    inviteId <- submit o do exercise playId Invite with player = c
    playId <- submit c do exercise inviteId Accept
    playId <- submit a do exercise playId Play with player = a; iouId = iouIdA
    playId <- submit b do exercise playId Play with player = b; iouId = iouIdB
    playId <- submit c do exercise playId Play with player = c; iouId = iouIdC
    pure Fixture with ..

validRun = scenario do
  Fixture{..} <- setupFixture 3.5 3.5 3.5
  passToDate $ date 1970 Jan 2
  submit o do exercise playId Run