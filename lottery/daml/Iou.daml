daml 1.2
module Iou where

template Iou
  with
    issuer : Party
    owner : Party
    amount : Decimal
    currency : Text
  where
    signatory issuer

    controller owner can
      Transfer : ContractId Iou
        with newOwner : Party
        do
          create this with owner = newOwner